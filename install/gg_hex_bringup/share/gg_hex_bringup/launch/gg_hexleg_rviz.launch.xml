<launch>
    
    <let name = "urdf_path"
        value="$(find-pkg-share gg_hex_description)/meshes/gg_hexleg_combo.urdf.xacro" />

    <let name = "rviz_config" value="$(find-pkg-share gg_hex_bringup)/rviz/hex_config.rviz" />
    <node pkg = "robot_state_publisher" exec="robot_state_publisher"> 
    
    <param name="robot_description"  value ="$(command 'xacro $(var urdf_path)')"  />
    
    </node>
    <!-- <node pkg="joint_state_publisher" exec="joint_state_publisher"/> -->
    
    <!-- <node pkg = "rviz2" exec = "rviz2" output="screen" /> -->
    <node pkg = "rviz2" exec = "rviz2" output="screen" args ="-d $(var rviz_config)"/>

    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/>
    
    </launch>
    